<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppMariano.Views.AboutPage1"
             Shell.NavBarIsVisible="False"
             BackgroundColor="{AppThemeBinding Light=White, Dark=#2f2f2f}">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <StackLayout VerticalOptions="FillAndExpand" HorizontalOptions="Fill">
                <Label></Label>
                <StackLayout>
                    <ContentView>
                        <Image Source="utt.png" VerticalOptions="Center" HeightRequest="140"></Image>
                    </ContentView>
                </StackLayout>
                <ScrollView>
                    <StackLayout>
                        <StackLayout Orientation="Vertical" VerticalOptions="Center">
                            <BoxView HorizontalOptions="FillAndExpand" HeightRequest="1" Color="{AppThemeBinding Light=#1690F4, Dark=#AE72E7}"/>
                        </StackLayout>
                        <StackLayout Orientation="Vertical" VerticalOptions="Center" Padding="30,24,30,24">
                            <Label Text="Nombre del Alumno" HorizontalTextAlignment="Center" FontSize="Body" FontAttributes="Bold" TextColor="{AppThemeBinding Light=Black, Dark=White}"/>
                            <Label Text="Mariano Alejandro Cabral Rodriguez" HorizontalTextAlignment="Center" FontSize="Body" FontAttributes="Bold" TextColor="{AppThemeBinding Light=Black, Dark=White}"/>
                        </StackLayout>
                        <StackLayout Orientation="Vertical" VerticalOptions="Center">
                            <BoxView HorizontalOptions="FillAndExpand" HeightRequest="1" Color="{AppThemeBinding Light=#1690F4, Dark=#AE72E7}"/>
                        </StackLayout>
                        <StackLayout Orientation="Vertical" VerticalOptions="Center" Padding="30,24,30,24">
                            <Label Text="Matricula del Alumno" HorizontalTextAlignment="Center" FontSize="Body" FontAttributes="Bold" TextColor="{AppThemeBinding Light=Black, Dark=White}"/>
                            <Label Text="20170010" HorizontalTextAlignment="Center" FontSize="Body" FontAttributes="Bold" TextColor="{AppThemeBinding Light=Black, Dark=White}"/>
                        </StackLayout>
                        <StackLayout Orientation="Vertical" VerticalOptions="Center">
                            <BoxView HorizontalOptions="FillAndExpand" HeightRequest="1" Color="{AppThemeBinding Light=#1690F4, Dark=#AE72E7}"/>
                        </StackLayout>
                        <StackLayout Orientation="Vertical" VerticalOptions="Center" Padding="30,24,30,24">
                            <Label Text="Cuatrimestre y Sección" HorizontalTextAlignment="Center" FontSize="Body" FontAttributes="Bold" TextColor="{AppThemeBinding Light=Black, Dark=White}"/>
                            <Label Text="10 °A" HorizontalTextAlignment="Center" FontSize="Body" FontAttributes="Bold" TextColor="{AppThemeBinding Light=Black, Dark=White}"/>
                        </StackLayout>
                        <StackLayout Orientation="Vertical" VerticalOptions="Center">
                            <BoxView HorizontalOptions="FillAndExpand" HeightRequest="1" Color="{AppThemeBinding Light=#1690F4, Dark=#AE72E7}"/>
                        </StackLayout>
                        <StackLayout Orientation="Vertical" VerticalOptions="Center" Padding="30,24,30,24">
                            <Label Text="Materia" HorizontalTextAlignment="Center" FontSize="Body" FontAttributes="Bold" TextColor="{AppThemeBinding Light=Black, Dark=White}"/>
                            <Label Text="Desarrollo Movil Integral" HorizontalTextAlignment="Center" FontSize="Body" FontAttributes="Bold" TextColor="{AppThemeBinding Light=Black, Dark=White}"/>
                        </StackLayout>
                        <StackLayout Orientation="Vertical" VerticalOptions="Center">
                            <BoxView HorizontalOptions="FillAndExpand" HeightRequest="1" Color="{AppThemeBinding Light=#1690F4, Dark=#AE72E7}"/>
                        </StackLayout>
                        <StackLayout Orientation="Vertical" VerticalOptions="Center" Padding="30,24,30,24">
                            <Label Text="Docente" HorizontalTextAlignment="Center" FontSize="Body" FontAttributes="Bold" TextColor="{AppThemeBinding Light=Black, Dark=White}"/>
                            <Label Text="Dr. Eliasib Reyes Moreno" HorizontalTextAlignment="Center" FontSize="Body" FontAttributes="Bold" TextColor="{AppThemeBinding Light=Black, Dark=White}"/>
                        </StackLayout>
                    </StackLayout>
                </ScrollView>
                
            </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>